@model IEnumerable<MyShop.Core.Models.Person>

@{
    ViewBag.Title = "Index";
}
<style>
    .go-back {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

        .go-back img {
            height: 25px;
            width: 25px;
        }

    .go-back_title span {
        margin-left: 10px;
        font-size: 18px;
        color: darkcyan;
    }

    input {
        outline: none;
        background: transparent;
        border-radius: 12px;
        border: 1px solid rgb(26, 144, 207);
        padding-left: 10px;
        width: 300px;
        height: 30px;
    }

    .submit {
        background: rgb(26, 144, 207);
        border-radius: 12px;
        color: white;
        width: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        outline: none;
        padding: 0px;
        height: 30px;
        margin-left: 8px;
    }

    .top-right {
        display: flex;
        margin-top: 25px;
        justify-content: center;
        margin-bottom: 25px;
    }

    .card {
        height: 100%;
        width: 100%;
        background: #f1f1f1;
        border-radius: 12px;
        padding: 5px 15px;
        margin-bottom: 15px;
        padding-bottom: 40px;
    }

        .card span {
            color: black;
            font-size: 14px;
        }

        .card div {
            margin-bottom: 15px;
        }

        .card .title {
            margin-top: 15px;
        }

    .second-text {
        color: rgb(26, 144, 207) !important;
    }


    .create a {
        color: white !important;
        font-size: 16px;
        background: rgb(26, 144, 207);
        border-radius: 12px;
        width: 110px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px 8px !important;
        text-decoration: none;
        transition: 0.3s;
    }

    .create a:hover {
        transform: scale(1.08)
    }

    .create {
        margin-bottom: 20px;
    }
    .ActionLinks {
        position: absolute;
        bottom: 10px;
        left: 20px;
        margin: auto;
    }

    .ActionLinks span a {
        color: black;
        text-decoration: none;
        font-size: 14px;
    }

    .ActionLinks span a:hover {
        color: rgb(26, 144, 207);
    }
</style>
<div class="main">
    <div class="go-back">
        <img src="data:image/png;base64," alt="Alternate Text" />
        <div class="go-back_title">
            <span>
                @*@Html.ActionLink("Home", "Home/Index","CompanyManagement")*@
                <a href="../../">Home Page</a>
            </span>
        </div>
    </div>
    <form action="formSearch" method="post">
        <div class="top-right" id="SearchBox">
            <input type="Text" name="SearchWord" value="" id="SearchWord" placeholder="Search" />
            <input type="submit" name="submitSearch" value="Search" class="submit"/>
        </div>
    </form>

    <div class="create">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div class="wrapper">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card">

                        <div class="title">
                            <span>
                                @Html.DisplayNameFor(model => model.Name)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.Name)
                            </span>
                        </div>
                        <div class="activities">
                            <span>
                                @Html.DisplayNameFor(model => model.LastName)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.LastName)
                            </span>
                        </div>
                        <div class="address">
                            <span>
                                @Html.DisplayNameFor(model => model.City)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.City)
                            </span>
                        </div>
                        <div class="address">
                            <span>
                                @Html.DisplayNameFor(model => model.Sex)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.Sex)
                            </span>
                        </div>
                        <div class="address">
                            <span>
                                @Html.DisplayNameFor(model => model.UserID)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.UserID)
                            </span>
                        </div>
                        <div class="address">
                            <span>
                                @Html.DisplayNameFor(model => model.DateOfBirth)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                            </span>
                        </div>
                        <div class="address">
                            <span>
                                @Html.DisplayNameFor(model => model.MobileNumber)
                            </span>
                            <span class="second-text">
                                @Html.DisplayFor(modelItem => item.MobileNumber)
                            </span>
                        </div>
                        <div class="ActionLinks">
                            <span>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            </span>
                            <span>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                            </span>
                            <span>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |

                            </span>
                            <span>
                                @Html.ActionLink("ConnectTo", "ConnectPersonToCompany", new { id = item.Id })
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
